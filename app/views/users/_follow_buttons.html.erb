<br/>Followers: (<%= @user.followers.count %>)
<% unless @user == current_user %>
  <% if is_following(@user) %>
    <%= link_to "Unfollow", unfollow_profile_path(@user), remote: true, method: :post, class: "btn btn-sm btn-danger" %>
  <%else%>
    <%= link_to "Follow", follow_profile_path(@user), remote: true, method: :post, class: "btn btn-sm btn-primary" %>
  <% end %>
<% end %>
